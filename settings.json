{
   // Tema e Estilo
   "workbench.editor.labelFormat": "short", // Mostra nomes curtos de arquivos no editor.
   "workbench.startupEditor": "none", // N√£o exibe editor ao iniciar.
   "workbench.editor.enablePreview": false, // Desativa a pr√©-visualiza√ß√£o de arquivos no editor.
   // Editor
   "editor.fontFamily": "JetBrains Mono, Operator Mono", // Define a fonte do editor.
   "editor.fontSize": 14, // Tamanho da fonte do editor.
   "editor.fontLigatures": true, // Ativa ligaduras na fonte.
   "editor.lineHeight": 1.8, // Altura da linha no editor.
   "editor.renderLineHighlight": "gutter", // Destaca a linha atual na margem.
   "editor.guides.bracketPairs": "active", // Exibe guias de emparelhamento de colchetes.
   "editor.semanticHighlighting.enabled": false, // Desativa realce sem√¢ntico.
   "editor.suggestOnTriggerCharacters": true, // Sugere automaticamente ao digitar.
   "editor.minimap.autohide": true, // Oculta o minimapa automaticamente.
   "editor.cursorStyle": "block", // Define o estilo do cursor como bloco.
   "editor.cursorBlinking": "solid", // Cursor piscando de forma s√≥lida.
   "editor.showFoldingControls": "never", // Oculta controles de dobragem.
   "editor.matchBrackets": "never", // Desativa destaque de colchetes.
   "editor.glyphMargin": true, // Ativa a margem de glifos (usada para depura√ß√£o, etc.).
   // Terminal
   "terminal.integrated.fontSize": 13, // Tamanho da fonte do terminal.
   "terminal.integrated.fontFamily": "SF Pro, JetBrains Mono", // Fonte do terminal.
   "terminal.integrated.gpuAcceleration": "off", // Desativa a acelera√ß√£o por GPU para o terminal.
   // Explorer
   "editor.lineNumbers": "relative", // Exibe n√∫meros de linha relativos.
   "explorer.compactFolders": false, // Exibe estrutura de pastas de forma expandida.
   "explorer.confirmDelete": false, // N√£o exibe confirma√ß√£o ao deletar.
   "explorer.confirmDragAndDrop": false, // N√£o exibe confirma√ß√£o ao arrastar e soltar arquivos.
   "editor.scrollbar.horizontal": "hidden",
   "editor.scrollbar.vertical": "hidden",
   "editor.scrollbar.verticalScrollbarSize": 0,
   // GitLens
   "gitlens.currentLine.enabled": true, // Ativa informa√ß√µes de Git na linha atual.
   "gitlens.hovers.currentLine.details": true, // Exibe detalhes de altera√ß√µes na linha atual.
   "gitlens.hovers.currentLine.over": "annotation", // Mostra informa√ß√µes de hover no GitLens.
   // Emmet
   "emmet.syntaxProfiles": {
     "javascript": "jsx" // Configura Emmet para JSX no JavaScript.
   },
   // Configura√ß√µes diversas
   "window.titleBarStyle": "custom",
   "files.exclude": {
     "dist": true, // Exclui a pasta dist do Explorer.
     ".circleci": true, // Exclui a pasta .circleci do Explorer.
     ".github": true // Exclui a pasta .github do Explorer.
   },
   "files.associations": {
     "*.md": "note" // Associa arquivos .md a "note".
   },
   "security.workspace.trust.untrustedFiles": "newWindow", // Abre arquivos n√£o confi√°veis em uma nova janela.
   "javascript.updateImportsOnFileMove.enabled": "always", // Atualiza automaticamente imports ao mover arquivos JS.
   "typescript.updateImportsOnFileMove.enabled": "always", // Atualiza automaticamente imports ao mover arquivos TS.
   // Personaliza√ß√£o
   "workbench.activityBar.location": "hidden", // Oculta a barra de atividade
   "workbench.colorCustomizations": {
     "editorRuler.foreground": "#ffffff0a", // Cor personalizada da r√©gua do editor.
     "editorIndentGuide.background1": "#ffffff01", // Guia de indenta√ß√£o sutil.
     "tab.activeBackground": "#ffffff0c" // Fundo ativo da aba.
   },
   "turboConsoleLog.logMessagePrefix": "üî¥", // Prefixo para logs do Turbo Console.
   "breadcrumbs.enabled": false, // Desativa os breadcrumbs no editor.
   "window.menuBarVisibility": "toggle",
   "window.title": "${rootName}",
   "workbench.editor.showTabs": "none",
   "workbench.layoutControl.enabled": false,
   "zenMode.centerLayout": false,
   "git.suggestSmartCommit": false,
   "github.copilot.advanced": {
     "authProvider": "github"
   },
   "github.copilot.renameSuggestions.triggerAutomatically": false,
   "diffEditor.ignoreTrimWhitespace": false,
   "editor.largeFileOptimizations": false,
   "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
   },
   "[json]": {
     "editor.defaultFormatter": "esbenp.prettier-vscode"
},
"workbench.colorTheme": "Subtle celestial"
 }
